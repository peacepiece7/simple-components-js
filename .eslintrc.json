{
  // 최상위 설정 "root" : false로 개별 프로잭트 설정 가능
  "root": true,
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  // 옵션 규칙을 세세하게 제어하기위해 사용, extends보다 우선 순위가 높습니다.
  "rules": {
    // console driven development인 나에게 필요한 옵션..
    "no-console": "warn",
    "camelcase": "off",
    "no-plusplus": "off",
    "no-await-in-loop": "off", // for문 안에서 await 합니다.
    "no-return-await": "off", // await을 리턴합니다.
    "no-promise-executor-return": "off", // 프로미스를 리턴합니다.
    "semi": ["error", "never"]
  },
  // "parser" : "@babel/eslint-parser", // "babel-eslint",  deprecated
  // 선언하지 않은 변수 에러를 막아줍니다.
  "env": {
    // widnow, document 객체가 eslint 에러를 반환하지 않습니다.
    "browser": true,
    // gobal 객체가 eslint 에러를 반환하지 않습니다.
    "node": true,
    // eslint에서 es12넣어줌 추가 기능은 아래 링크 참고
    // https://chanyeong.com/blog/post/29
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  // node_modules, .로 시작하는 설정 파일 외 린팅하고 싶지 않은 폴더를 작성할 수 있습니다.
  "ignorePatterns": ["build", "dist"]

  /*
    참고
    https://www.daleseo.com/eslint-config/#settings-%EC%98%B5%EC%85%98

    optional chaining에러
    https://stackoverflow.com/questions/61628947/eslint-optional-chaining-error-with-vscode
    */
}
